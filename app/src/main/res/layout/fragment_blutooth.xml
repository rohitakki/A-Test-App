<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blutooth">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="Manage Bluetooth"/>

    <ImageView
        android:id="@+id/bluetooth_off_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bluetooth_off"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/bluetooth_on_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/bluetooth_on"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="12dp"
        android:gravity="bottom">
    <Button
        android:id="@+id/bluetooth_on_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="turn on bluetooth "
        android:paddingHorizontal="26dp" />

    <Button
        android:id="@+id/bluetooth_off_button"
        android:layout_marginTop="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="turn off bluetooth"
        android:paddingHorizontal="26dp"/>

    </LinearLayout>

</RelativeLayout>